{
  "name": "vps-devops-agent",
  "version": "1.0.0",
  "description": "Agent DevOps autonome pour gÃ©rer un VPS depuis le navigateur",
  "type": "module",
  "scripts": {
    "dev:backend": "node --watch backend/server.js",
    "dev:frontend": "cd frontend && python3 -m http.server 8080",
    "start": "node backend/server.js",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "clean-port": "fuser -k 4000/tcp 2>/dev/null || true",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:performance": "bash test-performance.sh",
    "db:migrate": "sqlite3 backend/devops-agent.db < migrations/006-performance-indexes.sql",
    "logs:view": "tail -f logs/combined.log",
    "logs:errors": "tail -f logs/error.log"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.6",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dockerode": "^4.0.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "js-yaml": "^4.1.1",
    "jsdom": "^27.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "openai": "^4.20.0",
    "simple-git": "^3.30.0",
    "ssh2": "^1.17.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "systeminformation": "^5.27.11",
    "tar": "^7.5.2",
    "tar-fs": "^3.1.1",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "db-migrate": "^0.11.14",
    "db-migrate-sqlite3": "^1.0.2",
    "jest": "^30.2.0",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "devops",
    "agent",
    "automation",
    "vps",
    "docker",
    "ai"
  ],
