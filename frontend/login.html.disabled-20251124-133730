    <script>
        const form = document.getElementById('loginForm');
        const btnLogin = document.getElementById('btnLogin');
        const loading = document.getElementById('loading');
        const errorMessage = document.getElementById('errorMessage');
        const successMessage = document.getElementById('successMessage');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            // Clear messages
            errorMessage.classList.remove('show');
            successMessage.classList.remove('show');
            
            // Show loading
            btnLogin.disabled = true;
            loading.classList.add('show');
            form.style.display = 'none';
            
            try {
                console.log('üîê Tentative de connexion...');
                
                const response = await fetch('/api/auth/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ username, password })
                });
                
                const data = await response.json();
                
                if (response.ok && data.token) {
                    console.log('‚úÖ Connexion r√©ussie !');
                    
                    // Save token
                    localStorage.setItem('authToken', data.token);
                    
                    // Show success
                    successMessage.textContent = '‚úÖ Connexion r√©ussie ! Redirection...';
                    successMessage.classList.add('show');
                    loading.classList.remove('show');
                    
                    // Redirect to dashboard with cache busting
                    setTimeout(() => {
                        window.location.href = '/dashboard.html?v=' + Date.now();
                    }, 1000);
                } else {
                    console.error('‚ùå √âchec de connexion:', data);
                    throw new Error(data.error || 'Identifiants invalides');
                }
            } catch (error) {
                console.error('‚ùå Erreur:', error);
                
                errorMessage.textContent = '‚ùå ' + error.message;
                errorMessage.classList.add('show');
                loading.classList.remove('show');
                form.style.display = 'block';
                btnLogin.disabled = false;
            }
        });
        
        // Check if already logged in
        const token = localStorage.getItem('authToken');
        if (token) {
            console.log('üîç Token trouv√©, v√©rification...');
            
            try {
                const payload = JSON.parse(atob(token.split('.')[1]));
                const exp = payload.exp * 1000;
                
                if (exp > Date.now()) {
                    console.log('‚úÖ Token valide, redirection...');
                    successMessage.textContent = '‚úÖ D√©j√† connect√© ! Redirection...';
                    successMessage.classList.add('show');
                    
                    setTimeout(() => {
                        window.location.href = '/dashboard.html?v=' + Date.now();
                    }, 1000);
                } else {
                    console.log('‚ö†Ô∏è Token expir√©');
                    localStorage.removeItem('authToken');
                }
            } catch (error) {
                console.error('‚ö†Ô∏è Token invalide:', error);
                localStorage.removeItem('authToken');
            }
        }
    </script>
